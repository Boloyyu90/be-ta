{
  "name": "backend-tryout-system-with-proctoring",
  "version": "1.0.0",
  "description": "Backend for online tryout system with proctoring",
  "author": "Your Name",
  "license": "MIT",
  "main": "index.js",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm exec nodemon --exec tsx src/server.ts",
    "build": "pnpm exec tsc && pnpm exec tsc-alias",
    "start": "node dist/server.js",

    "type-check": "pnpm exec tsc --noEmit",
    "type-check:watch": "pnpm exec tsc --noEmit --watch",

    "lint": "pnpm exec eslint . --ext .ts",
    "lint:fix": "pnpm exec eslint . --ext .ts --fix",

    "format": "pnpm exec prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "format:check": "pnpm exec prettier --check \"src/**/*.ts\" \"prisma/**/*.ts\"",

    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate": "pnpm exec prisma migrate dev",
    "prisma:migrate:prod": "pnpm exec prisma migrate deploy",
    "prisma:studio": "pnpm exec prisma studio",
    "prisma:seed": "pnpm exec tsx prisma/seed.ts",
    "prisma:reset": "pnpm exec prisma migrate reset --force",
    "db:push": "pnpm exec prisma db push",

    "test": "pnpm exec vitest",
    "test:ci": "pnpm exec vitest --run",
    "coverage": "pnpm exec vitest run --coverage",

    "prepare": "pnpm exec husky install"
  },
  "keywords": [
    "Express",
    "Typescript",
    "Prisma",
    "PostgreSQL"
  ],
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.9",
    "@types/pino": "^7.0.4",
    "@types/pino-http": "^5.8.4",
    "@types/pino-pretty": "^4.7.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.8",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.4.1",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "fs-extra": "^11.3.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "uni-response": "^1.0.3",
    "zod": "^3.24.2"
  }
}
